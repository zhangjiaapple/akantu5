{
    "linters": {
	"python": {
            "type": "flake8",
            "include": [ "(\\.py$)", "(^hbm$)" ],
            "exclude": "(^third-party/)",
	    "severity.rules": {
		"(^E)": "error",
		"(^W)": "warning",
		"(^F)": "advice"
	    }
        },

        "merges": {
            "type": "merge-conflict"
        }
    }
}
